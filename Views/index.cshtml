@if (Model.Count == 0) {
  <h1>WELCOME</h1>
}
<h3>You have visited...</h3>
  @if (Model.Count == 0) {
    <h2>NowheresVille, apparently</h2>
    <p>You might want to try <em>adding</em> a city.</p>
  }
  @foreach (var city in Model) {
    <h2>@city.GetCity()</h2>
    <p>
      You last visited the @city.GetAdjective() city of @city.GetCity() in @city.GetYear(). Hey! Here's a <a href="@city.GetImageLink()">@city.GetAdjective() pic</a> of @city.GetCity().
    </p>
  }
@if (Model.Count == 0) {
  <a href="/goForm">Add your first place</a>
} else {
  <a href="/goForm">Add another place</a>
}
